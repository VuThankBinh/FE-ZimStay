<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nâng cấp tài khoản VIP"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIP 1"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="99.000 VNĐ"
                android:textSize="18sp"
                android:textColor="#FF5722"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Ưu tiên hiển thị bài đăng\n• Đăng tối đa 5 bài/tháng\n• Hỗ trợ 24/7"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnVip1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nâng cấp"
                android:backgroundTint="@color/black"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIP 2"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="199.000 VNĐ"
                android:textSize="18sp"
                android:textColor="#FF5722"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Ưu tiên hiển thị bài đăng\n• Đăng tối đa 10 bài/tháng\n• Hỗ trợ 24/7\n• Được đánh dấu VIP"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnVip2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nâng cấp"
                android:backgroundTint="@color/black"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIP 3"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="299.000 VNĐ"
                android:textSize="18sp"
                android:textColor="#FF5722"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Ưu tiên hiển thị bài đăng\n• Đăng tối đa 15 bài/tháng\n• Hỗ trợ 24/7\n• Được đánh dấu VIP\n• Quảng cáo miễn phí"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnVip3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nâng cấp"
                android:backgroundTint="@color/black"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout> 