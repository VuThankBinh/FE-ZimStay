<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề bài đăng"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222"/>

        <!-- Mô tả -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả ngắn gọn về bài đăng hoặc phòng trọ"
            android:textSize="14sp"
            android:textColor="#555"
            android:paddingTop="4dp"/>

        <!-- Địa chỉ -->
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="45 Trần Quang Khải, Lê Lợi, TP Hưng Yên, Hưng Yên"
            android:textSize="14sp"
            android:textColor="#444"
            android:paddingTop="6dp"/>

        <!-- Giá - Diện tích - Tiền cọc -->
        <TextView
            android:id="@+id/tvPriceAreaDeposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá: 2.200.000đ - Diện tích: 28m² - Cọc: 1.000.000đ"
            android:textSize="13sp"
            android:textColor="#444"
            android:paddingTop="2dp"/>

        <!-- Tiện ích -->
        <TextView
            android:id="@+id/tvAmenities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiện ích: Điện, Nước, Internet, Giữ xe, An ninh"
            android:textSize="13sp"
            android:textColor="#555"
            android:paddingTop="2dp"/>

        <!-- Danh sách ảnh ngang -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvImages"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:paddingTop="8dp"
            android:orientation="horizontal"
            android:scrollbars="horizontal"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
